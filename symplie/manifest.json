{
  "manifest_version": 2,

  "name": "Symplie",
  "description": "A lightweight notepad powered by Markdown",
  "version": "0.5.1",
  "icons": {
    "16":  "img/icon16.png",
    "48":  "img/icon48.png",
    "128": "img/icon128.png"
  },
  "browser_action": {
    "default_icon": "img/icon128.png",
    "default_popup": "views/index.html"
  },
  "permissions": [
    "storage",
    "identity",
    "https://www.googleapis.com/"
  ],
  "oauth2": {
    "client_id": "437178975982-gjmpe35c5ac50db5m8n83um4q4339c71.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/plus.login",
      "https://www.googleapis.com/auth/chromewebstore.readonly"
    ]
  }
}