{
  "manifest_version": 2,

  "name": "Symplie",
  "description": "A lightweight notepad powered by Markdown",
  "version": "0.4.1",
  "icons": {
    "16":  "img/icon16.png",
    "48":  "img/icon48.png",
    "128": "img/icon128.png"
  },
  "browser_action": {
    "default_icon": "img/icon128.png",
    "default_popup": "views/index.html"
  },
  "permissions": [
    "storage"
  ]
}