{
  "manifest_version": 2,

  "name": "Symplie",
  "description": "A lightweight notepad powered by Markdown",
  "version": "0.8.2.0",
  "minimum_chrome_version": "40.0",
  "icons": {
    "16":  "img/icon16.png",
    "48":  "img/icon48.png",
    "128": "img/icon128.png"
  },
  "browser_action": {
    "default_icon": "img/icon128.png",
    "default_popup": "views/index.html"
  },
  "permissions": [
    "storage",
    "identity"
  ],
  "oauth2": {
    "client_id": "437178975982-0439jj9j5l8mvk3q6va09lr8o22ub7e0.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/chromewebstore.readonly"
    ]
  }
}